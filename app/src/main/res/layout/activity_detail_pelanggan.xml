<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPelanggan">
    <fragment
        android:id="@+id/peta_detailpelanggan"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_gradien"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/background_rounded"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:background="@drawable/card_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Toko(Pemilik)"
                    android:textColor="#777777"
                    android:textSize="13sp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginBottom="9dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/namatoko_detailPelanggan"/>
                <TextView
                    android:id="@+id/uDetail_pelanggan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UBAH"
                    android:textColor="#219EBC"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="9dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/namatoko_detailPelanggan"/>
                <TextView
                    android:id="@+id/namatoko_detailPelanggan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="   "
                    android:textColor="#636363"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_margin="14dp"
                    app:layout_constraintBottom_toTopOf="@id/title_telpelanggan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/title_telpelanggan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor Telepon"
                    android:textColor="#777777"
                    android:textSize="13sp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginBottom="9dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tel_detailPelanggan"/>
                <TextView
                    android:id="@+id/tel_detailPelanggan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="   "
                    android:textColor="#636363"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_margin="14dp"
                    app:layout_constraintBottom_toTopOf="@id/title_alamatpelanggan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/title_alamatpelanggan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:textColor="#777777"
                    android:textSize="13sp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginBottom="9dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/alamat_detailPelanggan"/>
                <TextView
                    android:id="@+id/alamat_detailPelanggan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="   "
                    android:textColor="#636363"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_margin="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>