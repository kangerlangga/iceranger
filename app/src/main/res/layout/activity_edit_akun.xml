<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAkun">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/aksibarprofil"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/back_editakun"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:src="@drawable/baseline_arrow_back_33"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#219EBC" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Informasi Akun Anda"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/garisbaratas"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B3B3B3"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aksibarprofil"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/garisbaratas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="55dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="17dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Anda"
                android:textColor="#777777"
                android:textSize="13sp" />
            <EditText
                android:id="@+id/email_editakun"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/grey_edittext"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textColorHint="#777777"
                android:textColor="#636363"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textColor="#777777"
                android:textSize="13sp"
                android:layout_marginTop="9dp"/>
            <EditText
                android:id="@+id/nama_editakun"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/grey_edittext"
                android:hint="Masukkan Nama"
                android:ems="10"
                android:inputType="text"
                android:padding="12dp"
                android:textColorHint="#777777"
                android:textColor="#636363"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. Telepon"
                android:textColor="#777777"
                android:textSize="13sp"
                android:layout_marginTop="9dp"/>
            <EditText
                android:id="@+id/telepon_editakun"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/grey_edittext"
                android:hint="Masukkan No. Telepon"
                android:ems="10"
                android:inputType="phone"
                android:padding="12dp"
                android:textColorHint="#777777"
                android:textColor="#636363"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jabatan"
                android:textColor="#777777"
                android:textSize="13sp"
                android:layout_marginTop="9dp"/>
            <EditText
                android:id="@+id/jabatan_editakun"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/grey_edittext"
                android:ems="10"
                android:inputType="text"
                android:padding="12dp"
                android:textColorHint="#777777"
                android:textColor="#636363"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textColor="#777777"
                android:textSize="13sp"
                android:layout_marginTop="9dp"/>
            <EditText
                android:id="@+id/alamat_editakun"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/grey_edittext"
                android:hint="Masukkan Alamat"
                android:ems="10"
                android:inputType="text"
                android:padding="12dp"
                android:textColorHint="#777777"
                android:textColor="#636363"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#777777"
                android:textSize="13sp"
                android:layout_marginTop="9dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                app:passwordToggleEnabled="true"
                app:hintEnabled="false">
                <EditText
                    android:id="@+id/pass_editakun"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/grey_edittext"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:hint="Masukkan Password"
                    android:textColorHint="#777777"
                    android:textColor="#636363"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btn_editakun"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="45dp"
                android:background="@drawable/btn_biru"
                android:text="PERBARUI AKUN"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>