<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LacakPengiriman">
    <fragment
        android:id="@+id/peta_lacakpengiriman"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_gradien"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/background_rounded"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:background="@drawable/card_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pesanan Dikirim Oleh"
                    android:textColor="#777777"
                    android:textSize="13sp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginBottom="9dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/namadriver_lacakpengiriman"/>
                <TextView
                    android:id="@+id/namadriver_lacakpengiriman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="   "
                    android:textColor="#636363"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_margin="14dp"
                    app:layout_constraintBottom_toTopOf="@id/title_pemesan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/title_pemesan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pemesan"
                    android:textColor="#777777"
                    android:textSize="13sp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginBottom="9dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/pemesan_lacakpengiriman"/>
                <TextView
                    android:id="@+id/pemesan_lacakpengiriman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="   "
                    android:textColor="#636363"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_margin="14dp"
                    app:layout_constraintBottom_toTopOf="@id/title_waktu"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/title_waktu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pembaruan Terakhir"
                    android:textColor="#777777"
                    android:textSize="13sp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginBottom="9dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/pembaruan_lacakpengiriman"/>
                <TextView
                    android:id="@+id/pembaruan_lacakpengiriman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="   "
                    android:textColor="#636363"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_margin="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>